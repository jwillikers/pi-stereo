root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.adoc]
indent_size = unset
indent_style = unset

[*.{adoc,envrc,lock,nix,nu,yaml,yml}]
max_line_length = off

[{justfile,.justfile,*.just}]
indent_size = 4
